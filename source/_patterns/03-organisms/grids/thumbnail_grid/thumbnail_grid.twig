<div class="thumbnail_grid tiles">
  {% for i in 0..2 %}
    {% if i == 0 %}
      {% include "@molecules/box_thumbnail.twig" with {style: "style1", img: '../../../../images/pic01.jpg', title: 'Magna', text: 'Yay variable text'}
      %}
    {% elseif i == 1 %}
      {% include "@molecules/box_thumbnail.twig" with {style: "style2", img: '../../../../images/pic02.jpg', title: 'Lorem', text: 'Hooray for looping!'}
      %}
    {% elseif i == 2 %}
      {% include "@molecules/box_thumbnail.twig" with {style: "style3", img: '../../../../images/pic03.jpg', title: 'Feugiat', text: 'And Twig!'}
      %}
    {% endif %}
  {% endfor %}
  %}
</div>
